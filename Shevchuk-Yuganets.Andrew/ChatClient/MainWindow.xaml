<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="Chat" Height="350" Width="525" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
       <Grid.RowDefinitions>
		   <RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		
		<WrapPanel Grid.Row="0" Height="34" HorizontalAlignment="Left">
			<TextBox Name="NameTextBox" Width="200" Height="30" VerticalContentAlignment="Center"/>
			<Button Name="ConnectButton" Width="100" Height="30" Content="Connect To Server" Click="ConnectButton_OnClick"/>
		</WrapPanel>
		
		<TextBox Grid.Row="1" Name="ChatTextBox" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>

		<WrapPanel Grid.Row="2" Height="34" HorizontalAlignment="Left">
			<TextBox Name="MessageTextBox" Width="417" Height="30" VerticalContentAlignment="Center"/>
			<Button Name="SendMessageButton" Width="100" Height="30" Content="Send Message" Click="SendMessageButton_OnClick"/>
		</WrapPanel>

	</Grid>
</Window>
