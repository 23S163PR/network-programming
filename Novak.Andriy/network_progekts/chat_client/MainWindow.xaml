<Window x:Class="chat_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="525">
    <StackPanel Background="DimGray">
        <Button Content="Conect" Width="70" HorizontalAlignment="Right" Margin="10,10" Click="ConectClick"/>
        <TextBox HorizontalAlignment="Stretch" Height="200"  Margin="5" Name="tbBox" 
                 AcceptsReturn="True" TextWrapping="WrapWithOverflow" TextOptions.TextFormattingMode="Display"/>
        <TextBox HorizontalAlignment="Stretch" Margin="5" Height="100" Name="tbText"/>
        <Button Content="Send" Width="70" HorizontalAlignment="Right" Margin="10,10" Name="bSend" Click="BSend_OnClick"/>

    </StackPanel>
</Window>
