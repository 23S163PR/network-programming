<UserControl x:Class="chat_client.CustomMessaqgeControl.MessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderBrush="White" BorderThickness="2,2,1,1" CornerRadius="30">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF959595" Offset="0.693"/>
            </LinearGradientBrush>
        </Border.Background>
    <StackPanel Name="spMessagePanel" RenderTransformOrigin="0.4,0.5" Margin="9">
        <Label Name="lbLogin" Foreground="LawnGreen"/>
        <TextBlock Name="tbMessage" Foreground="Ivory"/>
        <Label Name="lbDate" Foreground="DeepSkyBlue"/>
    </StackPanel>
    </Border>
</UserControl>
